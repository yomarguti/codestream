<UserControl x:Class="CodeStream.VisualStudio.UI.Margins.Codemark"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignHeight="205" d:DesignWidth="250">

    <Image Cursor="Hand" ToolTip="{Binding Tooltip}" MouseDown="Codemark_MouseDown" Name="Glyph" Source="{Binding ImageUri}" Width="19" Height="19" HorizontalAlignment="Left"/>
</UserControl>