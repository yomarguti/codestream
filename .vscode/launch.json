{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch CodeStream",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceFolder}/vscode"],
			"env": {
				"VSCODE_DEBUGGING_EXTENSION": "codestream",
				"CODESTREAM_AGENT_BREAK_ON_START": "false"
			},
			"cwd": "${workspaceFolder}/vscode",
			"outFiles": ["${workspaceFolder}/vscode/dist/**/*.js"],
			"skipFiles": ["<node_internals>/**", "**/node_modules/**", "**/resources/app/out/vs/**"],
			"smartStep": true,
			"sourceMaps": true
		},
		{
			"name": "Launch CodeStream (Agent Break)",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceFolder}"],
			"env": {
				"VSCODE_DEBUGGING_EXTENSION": "codestream",
				"CODESTREAM_AGENT_BREAK_ON_START": "true"
			},
			"cwd": "${workspaceFolder}/vscode",
			"outFiles": ["${workspaceFolder}/vscode/dist/**/*.js"],
			"skipFiles": ["<node_internals>/**", "**/node_modules/**", "**/resources/app/out/vs/**"],
			"smartStep": true,
			"sourceMaps": true
		},
		{
			"name": "Rebuild & Launch CodeStream",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceFolder}"],
			"env": {
				"VSCODE_DEBUGGING_EXTENSION": "codestream"
			},
			"cwd": "${workspaceFolder}/vscode",
			"outFiles": ["${workspaceFolder}/vscode/dist/**/*.js"],
			"skipFiles": ["<node_internals>/**", "**/node_modules/**", "**/resources/app/out/vs/**"],
			"smartStep": true,
			"sourceMaps": true,
			"preLaunchTask": "npm: rebuild"
		},
		{
			"name": "Watch & Launch CodeStream",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceFolder}"],
			"env": {
				"VSCODE_DEBUGGING_EXTENSION": "codestream"
			},
			"cwd": "${workspaceFolder}/vscode",
			"outFiles": ["${workspaceFolder}/vscode/dist/**/*.js"],
			"skipFiles": ["<node_internals>/**", "**/node_modules/**", "**/resources/app/out/vs/**"],
			"smartStep": true,
			"sourceMaps": true,
			"preLaunchTask": "watch"
        },
        {
			"type": "node",
			"request": "attach",
			"name": "Attach to Agent",
			"port": 6009,
			"cwd": "${workspaceFolder}/vscode",
			"outFiles": ["${workspaceFolder}/vscode/dist/agent.js"],
			"skipFiles": ["<node_internals>/**", "**/node_modules/**", "**/resources/app/out/vs/**"],
			"smartStep": true,
			"sourceMaps": true
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Agent (VS)",
			"port": 6010,
			"cwd": "${workspaceFolder}/vscode",
			"outFiles": ["${workspaceFolder}/vscode/dist/agent-pkg.js"],
			"skipFiles": ["<node_internals>/**", "**/node_modules/**"],
			"smartStep": true,
			"sourceMaps": true
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Agent (Atom)",
			"port": 6012,
			"cwd": "${workspaceFolder}/vscode",
			"outFiles": ["${workspaceFolder}/vscode/dist/agent-pkg.js"],
			"skipFiles": ["<node_internals>/**", "**/node_modules/**"],
			"smartStep": true,
			"sourceMaps": true
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Agent (debug node_modules)",
			"port": 6009,
			"cwd": "${workspaceFolder}/vscode",
			"outFiles": ["${workspaceFolder}/vscode/dist/agent.js"],
			"smartStep": true,
			"sourceMaps": true
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Unit Tests",
			"port": 9229,
			"cwd": "${workspaceFolder}/vscode",
			"outFiles": ["${workspaceFolder}/vscode/dist/agent.js"],
			"smartStep": true,
			"sourceMaps": true
		}
	]
}
